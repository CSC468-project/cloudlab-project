pipeline {
    agent {
		kubernetes {
			defaultContainer 'buildct'
			yamlFile 'kubesbuilder.yaml'
		}
	}

    stages {
        stage('Build') {
			steps {
                echo 'Building mysql...'
				sh '(cd DockerFiles;docker-compose build flask)'
			}
		}
        stage('Upload') {
			steps {
                echo 'Uploading to Docker registry...'
				sh '(cd DockerFiles;docker-compose push flask)'
			}
		}
        stage('Deploy') {
			steps {
				echo 'Replacing running pods on k8s cluster'
                sh 'kubectl --namespace="default" replace --force -f flask.yaml'
			}
	    }
    }	
}
