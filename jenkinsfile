pipeline {
    agent {
		kubernetes {
			defaultContainer 'buildct'
			yamlFile 'kubesbuilder.yaml'
		}
	}

    stages {
		stage('Setup') {
			steps {
				sh 'pacman -Sy'
				sh 'pacman -S curl socat docker docker-compose --noconfirm'
			}
		}
        stage('Build') {
			steps {
                echo 'Building...'
				sh '(cd DockerFiles;docker-compose build)'
			}
		}
        stage('Upload') {
			steps {
                echo 'Uploading to Docker registry...'
				sh '(cd DockerFiles;docker-compose push)'
			}
		}
        stage('Deploy') {
			withKubeConfig([credentialsId: 'jenkins', serverUrl: '192.168.1.1']) {
                sh 'kubectl replace deployment pizzapie -f pizzapie.yaml'
		    }
	    }
    }	
}
