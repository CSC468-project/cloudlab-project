pipeline {
    agent {
		kubernetes {
			defaultContainer 'buildct'
			yamlFile 'kubesbuilder.yaml'
		}
	}

    stages {
		stage('Setup') {
			steps {
				sh 'pacman -Sy'
				sh 'pacman -S sudo git curl socat docker docker-compose --noconfirm'
				sh 'git clone https://aur.archlinux.org/kubectl-bin.git'
				sh "bash -c \"useradd builduser -m; passwd -d builduser; printf 'builduser ALL=(ALL) ALL\n' | tee -a /etc/sudoers;\""
				sh '(su builduser; cd kubectl-bin; makepkg -cis)'
			}
		}
        stage('Build') {
			steps {
                echo 'Building...'
				sh '(cd DockerFiles;docker-compose build)'
			}
		}
        stage('Upload') {
			steps {
                echo 'Uploading to Docker registry...'
				sh '(cd DockerFiles;docker-compose push)'
			}
		}
        stage('Deploy') {
			steps {
				echo 'Replacing running pods on k8s cluster'
                sh 'kubectl replace deployment pizzapie -f pizzapie.yaml'
			}
	    }
    }	
}
